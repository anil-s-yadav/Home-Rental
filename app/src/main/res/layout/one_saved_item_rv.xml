<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="14dp"
    android:layout_marginStart="13dp"
    android:layout_marginEnd="15dp"
    android:backgroundTint="@color/White"
    android:background="@drawable/green_bg_text"
    android:orientation="horizontal">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/property_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="2dp"
        android:layout_margin="10dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/RoundedSquare"
        android:layout_gravity="center"
        android:background="@color/DarkBlue200"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/save_post_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:maxLines="2"
            android:hint="Property Name"
            android:textSize="16sp"
            android:textColor="@color/DarkBlue500"/>
        <TextView
            android:id="@+id/save_post_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Property Address"
            android:maxLines="2"
            android:layout_marginTop="5dp"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/save_post_owner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="Property Owner"
            android:textSize="14sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/save_post_delet"
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:src="@drawable/rupee"/>
            <TextView
                android:id="@+id/text_view_property_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Property Price"
                android:textSize="14sp"
                android:layout_marginStart="2dp"
                android:textColor="@color/DarkBlue500"
                android:layout_weight="4"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/save_post_delete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_marginEnd="14dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/trash"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>