<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:backgroundTint="@color/White"
    app:cardCornerRadius="8dp"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/requests_activity_sender_dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            android:background="@color/DarkBlue400"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/Circular" />

        <TextView
            android:id="@+id/requests_activity_sender_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:layout_marginTop="13dp"
            android:fontFamily="sans-serif-medium"
            android:text="User Name"
            android:textColor="@color/DarkBlue400"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/requests_activity_sender_dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/massage_activity_sender_last_massage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Requested for Rent"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="@+id/requests_activity_sender_name"
            app:layout_constraintTop_toBottomOf="@+id/requests_activity_sender_name" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_view_sender_details"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/blue_stoke_square"
            android:text="View"
            android:textColor="@color/DarkBlue300"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
