<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Search">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:iconifiedByDefault="false"
        app:queryHint="Search for location Ex. Mumbai"
        app:queryBackground="@android:color/transparent"
        android:background="@drawable/blue_bg"
        android:backgroundTint="@color/DarkBlue100"
        android:layout_margin="12dp"
        android:padding="2dp"
        android:elevation="2dp"
        app:searchIcon="@drawable/baseline_search_24"
        android:isScrollContainer="true"
        android:focusable="true"
        />
    <HorizontalScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="homes">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_calendar"/>


    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/linearlayout_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/DarkBlue100"
            android:background="@drawable/blue_bg">
            <ImageView
                android:id="@+id/tv1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/trash" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trash"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="1dp"
                android:layout_below="@+id/tv1"/>
        </RelativeLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchRecycler_View"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/one_saved_item_rv"/>

</LinearLayout>