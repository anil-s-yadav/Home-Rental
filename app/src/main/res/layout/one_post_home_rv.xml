<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/White"
        android:background="@drawable/green_bg_text"
        android:layout_margin="8dp"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/post_seller_dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="12dp"
                    app:shapeAppearanceOverlay="@style/Circular"
                    android:background="@color/DarkBlue200" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/post_seller_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Anil Yadav"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp" />

                    <TextView
                        android:id="@+id/post_seller_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/DarkBlue400"
                        android:hint="@string/loading"/>
                </LinearLayout>

                <!--<androidx.cardview.widget.CardView
                    android:id="@+id/post_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/DarkBlue100"
                    app:cardCornerRadius="5dp">-->

                    <TextView
                        android:id="@+id/post_chat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/Green300"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Send Request"/>

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="17dp"
                    android:src="@drawable/angle_right"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    app:tint="@color/Green300"/>
<!--
                </androidx.cardview.widget.CardView>
-->

            </LinearLayout>


            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollIndicators="none"
                android:scrollbars="none"
                android:contentDescription="homes">

                <LinearLayout
                    android:id="@+id/linearLayout_openPropertyDetails"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/post_image_from_database1"
                        android:layout_width="330dp"
                        android:layout_height="230dp"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="2dp"
                        app:shapeAppearanceOverlay="@style/RoundedSquare"
                        android:background="@color/DarkBlue200"
                        />
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/post_image_from_database2"
                        android:layout_width="330dp"
                        android:layout_height="230dp"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="2dp"
                        app:shapeAppearanceOverlay="@style/RoundedSquare"
                        android:background="@color/DarkBlue200"
                        />
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/post_image_from_database3"
                        android:layout_width="330dp"
                        android:layout_height="230dp"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="2dp"
                        app:shapeAppearanceOverlay="@style/RoundedSquare"
                        android:background="@color/DarkBlue200"
                        />
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/post_image_from_database4"
                        android:layout_width="330dp"
                        android:layout_height="230dp"
                        android:layout_marginEnd="2dp"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/RoundedSquare"
                        android:background="@color/DarkBlue200"
                        />
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/post_image_from_database5"
                        android:layout_width="330dp"
                        android:layout_height="230dp"
                        android:layout_marginEnd="2dp"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/RoundedSquare"
                        android:background="@color/DarkBlue200"
                        />
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/post_image_from_database6"
                        android:layout_width="330dp"
                        android:layout_height="230dp"
                        android:layout_marginEnd="2dp"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/RoundedSquare"
                        android:background="@color/DarkBlue200"
                        />


                </LinearLayout>

            </HorizontalScrollView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/post_price"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_weight="2"
                    android:layout_gravity="center_vertical"
                    android:text="â‚¹ 6.2 Cr"
                    android:paddingTop="3dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/DarkBlue400"
                    android:hint="@string/loading" />
                <ImageView
                    android:id="@+id/post_save"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/heart_outline" />
                <ImageView
                    android:id="@+id/post_share"
                    android:layout_width="28dp"
                    android:layout_height="27dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/share" />

            </LinearLayout>


            <TextView
                android:id="@+id/post_title"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:hint="@string/loading"
                android:fontFamily="@font/poppins_regular"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/post_address"
                android:layout_width="wrap_content"
                android:hint="@string/loading"
                android:textColor="@color/White400"
                android:layout_height="22dp"/>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/post_carpet_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:gravity="center"
                    android:drawablePadding="4dp"
                    android:text="5200 Sqft."
                    android:backgroundTint="#C4000000"
                    android:textSize="10sp"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/green_bg_text"
                    android:textColor="@color/White"
                    android:hint="@string/loading"
                    app:drawableStartCompat="@drawable/dot" />

                <TextView
                    android:id="@+id/post_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:gravity="center"
                    android:text="Semi-fernished"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginEnd="8dp"
                    android:layout_toEndOf="@id/post_carpet_area"
                    android:backgroundTint="#C4000000"
                    android:textSize="10sp"
                    android:drawablePadding="4dp"
                    app:drawableStartCompat="@drawable/dot"
                    android:background="@drawable/green_bg_text"
                    android:textColor="@color/White"
                    android:hint="@string/loading" />
            </RelativeLayout>

        </LinearLayout>

    <TextView
        android:id="@+id/post_sell_rent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="258dp"
        android:background="@drawable/green_bg_text"
        android:backgroundTint="@color/White"
        android:drawablePadding="4dp"
        android:paddingStart="4dp"
        android:paddingEnd="8dp"
        android:paddingBottom="1dp"
        android:text="Sell"
        android:textColor="#F03E3E3E"
        android:textSize="11sp"
        app:drawableStartCompat="@drawable/dot"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>

