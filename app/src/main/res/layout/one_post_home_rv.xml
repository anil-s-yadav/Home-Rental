<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/DarkBlue100"
        android:background="@drawable/green_bg_text"
        android:layout_margin="6dp"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/post_seller_dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="12dp"
                    app:shapeAppearanceOverlay="@style/Circular"
                    android:src="@drawable/no_profile_pic" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/post_seller_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Anil Yadav"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp" />

                    <TextView
                        android:id="@+id/post_seller_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/DarkBlue400"
                        android:hint="@string/loading"/>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/post_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/DarkBlue200"
                    app:cardCornerRadius="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/DarkBlue500"
                        android:textStyle="bold"
                        android:text="Request for Rent"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <ImageView
                android:id="@+id/post_image_from_database"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:background="@color/White400"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/rupee"/>
                <TextView
                    android:id="@+id/post_price"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_weight="2"
                    android:textSize="18dp"
                    android:hint="@string/loading" />
                <ImageView
                    android:id="@+id/post_save"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/heart_outline" />
                <ImageView
                    android:id="@+id/post_share"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/share" />

            </LinearLayout>


            <TextView
                android:id="@+id/post_title"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginTop="16dp"
                android:hint="@string/loading"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/post_address"
                android:layout_width="wrap_content"
                android:hint="@string/loading"
                android:textColor="@color/White400"
                android:layout_height="22dp"/>

            <TextView
                android:id="@+id/post_carpet_area"
                android:layout_width="86dp"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:gravity="center"
                android:text="5200 Sqft."
                android:backgroundTint="@color/White100"
                android:background="@drawable/green_bg_text"
                android:textColor="@color/White300"
                android:hint="@string/loading" />

            <TextView
                android:id="@+id/post_status"
                android:layout_width="108dp"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:gravity="center"
                android:text="Semi-fernished"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/White100"
                android:background="@drawable/green_bg_text"
                android:textColor="@color/White300"
                android:hint="@string/loading" />

        </LinearLayout>

    <TextView
        android:id="@+id/post_sell_rent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="180dp"
        android:layout_weight="1"
        android:background="@drawable/green_bg_text"
        android:fontFamily="sans-serif-condensed"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="Sell"
        android:textColor="@color/Green300"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>

