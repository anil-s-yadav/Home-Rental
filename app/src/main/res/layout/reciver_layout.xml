<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/receiver_profile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        style="@style/CornerCut"
        android:src="@drawable/no_profile_pic" />

    <TextView
        android:id="@+id/receiver_massage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:background="@drawable/reciver_shape"
        android:layout_toRightOf="@id/receiver_profile"
        android:padding="7dp"
        android:text="receive"
        android:textColor="@color/black"
        android:textStyle="bold" />

</RelativeLayout>