<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/home_upper_corner_round_white"
        android:backgroundTint="@color/White150"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="42dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:scaleX="-1"
            android:src="@drawable/app_logo_two" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/backBtn"
            android:fontFamily="cursive"
            android:text="@string/home_rentals"
            android:textColor="@color/DarkBlue500"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!--<ImageView
            android:id="@+id/massages"
            android:layout_width="23dp"
            android:layout_height="23dp"
            app:tint="@color/DarkBlue300"
            android:src="@drawable/messages"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:layout_marginEnd="20dp"
            />-->

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitCenter"
            android:id="@+id/massages"
            android:layout_marginEnd="8dp"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@android:color/transparent"
            app:srcCompat="@drawable/messages" />

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitCenter"
            android:backgroundTint="@android:color/transparent"
            app:srcCompat="@drawable/notificaction_icon"
            android:layout_centerVertical="true"
            android:layout_marginEnd="50dp"
            android:layout_alignEnd="@+id/massages"

            android:scaleX="-1"
            />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/DarkBlue500"
            android:orientation="vertical"
            android:paddingBottom="60dp">






            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/textView_open_massages_activity"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/blue_bg"
                android:backgroundTint="@color/White"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="See Requests"
                android:textColor="@color/DarkBlue300"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:scrollIndicators="none"
                android:scrollbars="none"
                app:layout_constraintBottom_toTopOf="@+id/home_recycler_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <RadioGroup
                    android:id="@+id/radio_group_register_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/home_radio_bg_selector"
                        android:button="@android:color/transparent"
                        android:drawableLeft="@drawable/home_buy"
                        android:paddingStart="10dp"
                        android:paddingEnd="12dp"
                        android:text="  Sell"
                        android:textColor="@drawable/home_radio_text_selector" />

                    <RadioButton
                        android:id="@+id/radio_male2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/home_radio_bg_selector"
                        android:button="@android:color/transparent"
                        android:paddingStart="10dp"
                        android:paddingEnd="12dp"
                        android:text="  Rent"
                        android:textColor="@drawable/home_radio_text_selector" />

                    <RadioButton
                        android:id="@+id/radio_male3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/home_radio_bg_selector"
                        android:button="@android:color/transparent"
                        android:drawableLeft="@drawable/home_buy"
                        android:paddingStart="10dp"
                        android:paddingEnd="12dp"
                        android:text="  Comercial"
                        android:textColor="@drawable/home_radio_text_selector" />

                    <RadioButton
                        android:id="@+id/radio_male4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/home_radio_bg_selector"
                        android:button="@android:color/transparent"
                        android:drawableLeft="@drawable/home_buy"
                        android:paddingStart="10dp"
                        android:paddingEnd="12dp"
                        android:text="  PG"
                        android:textColor="@drawable/home_radio_text_selector" />

                    <RadioButton
                        android:id="@+id/radio_male5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/home_radio_bg_selector"
                        android:button="@android:color/transparent"
                        android:drawableLeft="@drawable/home_buy"
                        android:paddingStart="10dp"
                        android:paddingEnd="12dp"
                        android:text="  Plot"
                        android:textColor="@drawable/home_radio_text_selector" />


                </RadioGroup>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="15dp"
                android:background="@drawable/blue_bg"
                android:backgroundTint="@color/White"
                android:drawableRight="@drawable/green_search"
                android:hint="search for attractive deals"
                android:padding="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />


            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/home_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="234dp"
                android:background="@drawable/home_upper_corner_round_white"
                android:paddingTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/constraintLayout" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>
</RelativeLayout>

