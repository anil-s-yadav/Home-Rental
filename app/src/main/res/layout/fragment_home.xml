<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/DarkBlue500"
            android:orientation="vertical"
            android:paddingBottom="60dp">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/app_logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:text="Home Rentals"
                android:textColor="@color/White"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
                app:layout_constraintEnd_toEndOf="@+id/imageView"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/button" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/blue_bg"
                android:backgroundTint="@color/White"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="See Requests"
                android:textColor="@color/DarkBlue300"
                android:textSize="11sp"
                app:layout_constraintBottom_toTopOf="@+id/textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:scrollIndicators="none"
                android:scrollbars="none"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView">

                <RadioGroup
                    android:id="@+id/radio_group_register_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/home_radio_bg_selector"
                        android:button="@android:color/transparent"
                        android:drawableLeft="@drawable/home_buy"
                        android:paddingStart="10dp"
                        android:paddingEnd="12dp"
                        android:text="  Buy"
                        android:textColor="@drawable/home_radio_text_selector" />

                    <RadioButton
                        android:id="@+id/radio_male2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/home_radio_bg_selector"
                        android:button="@android:color/transparent"
                        android:drawableLeft="@drawable/home_buy"
                        android:paddingStart="10dp"
                        android:paddingEnd="12dp"
                        android:text="  Buy"
                        android:textColor="@drawable/home_radio_text_selector" />

                    <RadioButton
                        android:id="@+id/radio_male3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/home_radio_bg_selector"
                        android:button="@android:color/transparent"
                        android:drawableLeft="@drawable/home_buy"
                        android:paddingStart="10dp"
                        android:paddingEnd="12dp"
                        android:text="  Comercial"
                        android:textColor="@drawable/home_radio_text_selector" />

                    <RadioButton
                        android:id="@+id/radio_male4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/home_radio_bg_selector"
                        android:button="@android:color/transparent"
                        android:drawableLeft="@drawable/home_buy"
                        android:paddingStart="10dp"
                        android:paddingEnd="12dp"
                        android:text="  PG"
                        android:textColor="@drawable/home_radio_text_selector" />

                    <RadioButton
                        android:id="@+id/radio_male5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/home_radio_bg_selector"
                        android:button="@android:color/transparent"
                        android:drawableLeft="@drawable/home_buy"
                        android:paddingStart="10dp"
                        android:paddingEnd="12dp"
                        android:text="  Plot"
                        android:textColor="@drawable/home_radio_text_selector" />


                </RadioGroup>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="15dp"
                android:background="@drawable/blue_bg"
                android:backgroundTint="@color/White"
                android:drawableRight="@drawable/green_search"
                android:hint="search for attractive deals"
                android:padding="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />


            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/home_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="234dp"
                android:background="@drawable/home_upper_corner_round_white"
                android:paddingTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/constraintLayout">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:text="tttttt"/>
            </androidx.recyclerview.widget.RecyclerView>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

